<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:viewModels="clr-namespace:OwlAssistant.ViewModels"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="670"
             x:Class="OwlAssistant.Views.ATISInfoView"
             x:DataType="viewModels:ATISInfoViewModel">
    
    <Design.DataContext>
        <viewModels:ATISInfoViewModel />
    </Design.DataContext>

    
    <StackPanel Spacing="0">
        <Border BorderBrush="{DynamicResource SystemControlBackgroundAccentBrush}"
                Padding="16,12"
                BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="ATIS Settings"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                    <Button Width="40"
                            Height="40"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            CornerRadius="20"
                            Command="{Binding RefreshCommand}"
                            BorderThickness="0">
                        <avalonia:MaterialIcon Kind="Refresh"
                                               Width="20"
                                               Height="20"
                                               Foreground="#1976d2" />
                    </Button>
                    <avalonia:MaterialIcon Kind="Broadcast"
                                           
                                           VerticalAlignment="Center"
                                           Width="30"
                                           Height="30"
                                           Foreground="{Binding ATISStatusColor}" />

                </StackPanel>
            </Grid>
        </Border>

        <!-- 内容区域 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Height="580" Margin="20">
            <StackPanel Spacing="20">
                
                <!-- 音量控制区域 -->
                <Border CornerRadius="14"
                        Padding="20"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <avalonia:MaterialIcon Kind="VolumeControl"
                                                   Width="20"
                                                   Height="20"
                                                   Foreground="{DynamicResource SystemControlBackgroundAccentBrush}" />
                            <TextBlock Text="Volume Controls"
                                       FontSize="17"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                        </StackPanel>

                        <!-- Master Volume -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="MASTER VOLUME"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            <DockPanel>
                                <Label Content="{Binding #masterVol.Value}"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                                <!-- <ToggleButton DockPanel.Dock="Right" -->
                                <!--               VerticalAlignment="Center" -->
                                <!--               Margin="10,0,0,0"> -->
                                <!--     <avalonia:MaterialIcon Kind="VolumeMute" -->
                                <!--                            Width="20" -->
                                <!--                            Height="20"/> -->
                                <!-- </ToggleButton> -->
                                <Slider Minimum="0" Maximum="30" 
                                        DockPanel.Dock="Right"
                                        x:Name="masterVol"
                                        Value="{Binding MasterVolume}"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1" />
                            </DockPanel>
                        </StackPanel>

                        <!-- Music Volume -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="MUSIC VOLUME"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            
                            
                            <DockPanel>
                                <Label Content="{Binding #musicVol.Value}"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                                <ToggleButton DockPanel.Dock="Right"
                                              IsChecked="{Binding MusicStop}"
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0">
                                    <avalonia:MaterialIcon Kind="VolumeMute"
                                                           Width="20"
                                                           Height="20"/>
                                </ToggleButton>
                                <Slider Minimum="0" Maximum="300" 
                                        x:Name="musicVol"
                                        Value="{Binding MusicVolume}"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="10" />
                            </DockPanel>
                        </StackPanel>

                        <!-- ATIS Volume -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="ATIS VOLUME"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            <DockPanel>
                                <Label Content="{Binding #atisVol.Value}"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                                <ToggleButton DockPanel.Dock="Right"
                                              IsChecked="{Binding ATISStop}"
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0">
                                    <avalonia:MaterialIcon Kind="VolumeMute"
                                                           Width="20"
                                                           Height="20"/>
                                </ToggleButton>
                                <Slider Minimum="0" Maximum="300" 
                                        Value="{Binding ATISVolume}"
                                        x:Name="atisVol"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="10" />
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 设置区域 -->
                <Border CornerRadius="14"
                        Padding="20"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <avalonia:MaterialIcon Kind="Settings"
                                                   Width="20"
                                                   Height="20"
                                                   Foreground="{DynamicResource SystemControlBackgroundAccentBrush}" />
                            <TextBlock Text="FM Settings"
                                       FontSize="17"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                        </StackPanel>

                        <!-- Campus Frequency -->
                        <Grid VerticalAlignment="Center">
                            <TextBlock Text="Enable Campus Frequency"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <ToggleSwitch HorizontalAlignment="Right"
                                          IsChecked="{Binding CampusEnabled}"
                                          Width="50"
                                          Height="30"/>
                        </Grid>

                        <!-- Backlight Timeout -->
                        <StackPanel Spacing="0">
                            <TextBlock Text="BACKLIGHT TIMEOUT"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            
                            <DockPanel>
                                <Label Content="{Binding #bgVal.Value}"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                                <Slider Minimum="0" Maximum="99" 
                                        DockPanel.Dock="Right"
                                        VerticalAlignment="Center"
                                        x:Name="bgVal"
                                        Value="{Binding BacklightTimeout}"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1" />
                            </DockPanel>
                        </StackPanel>

                        <!-- Tx Frequency -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="TX FREQUENCY"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <TextBox Grid.Column="0"
                                         Watermark="FREQ"
                                         MaxLength="5"
                                         FontSize="14"
                                         Text="{Binding TxFrequency}"
                                         Padding="12,8"/>
                                <Button Grid.Column="1"
                                        Content="Modify"
                                        Padding="20,8"
                                        CornerRadius="8"
                                        Command="{Binding ApplyTxFreq}"
                                        FontSize="12"
                                        Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                        Foreground="White"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- 重置按钮 -->
                        <Button Content="RESET ALL"
                                HorizontalAlignment="Center"
                                Padding="30,12"
                                CornerRadius="10"
                                FontSize="14"
                                FontWeight="Bold"
                                Command="{Binding ResetAll}"
                                Background="OrangeRed"
                                Foreground="White"
                                Margin="0,10"/>
                    </StackPanel>
                </Border>

                <!-- 播放控制区域 -->
                <Border CornerRadius="14"
                        Padding="20"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <avalonia:MaterialIcon Kind="MusicNote"
                                                   Width="20"
                                                   Height="20"
                                                   Foreground="{DynamicResource SystemControlBackgroundAccentBrush}" />
                            <TextBlock Text="Playback Controls"
                                       FontSize="17"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                        </StackPanel>

                        <!-- Current Song -->
                        <Border CornerRadius="10"
                                Padding="16,12"
                                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Current Song:"
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                <!-- <TextBlock Text="Song Name Here" -->
                                <!--            FontSize="14" -->
                                <!--            FontWeight="Medium" -->
                                <!--            Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" /> -->
                                <ComboBox Width="220" ItemsSource="{Binding SongList}" SelectedItem="{Binding SelectedSong}"/>
                            </StackPanel>
                        </Border>

                        <!-- Control Buttons -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Spacing="8">
                                <Button Content="Recording"
                                        Padding="12,8"
                                        CornerRadius="8"
                                        FontSize="12"/>
                            </StackPanel>
                            
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>